{
  "include": ["src/**/*"],
  "compilerOptions": {
    "isolatedModules": true,
    "module": "commonjs",
    "jsx": "preserve",
    "esModuleInterop": true,
    "sourceMap": true,
    "allowJs": true,
    "lib": ["es6", "dom", "es2019"],
    "rootDir": "src",
    "moduleResolution": "node",
    "target": "es2019",
    "strict": true,
    "experimentalDecorators": true
  }
}
